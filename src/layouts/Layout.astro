---
interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta
      name="description"
      content="Centro de entrenamiento personal, salud y bienestar general en Bollullos par del Condado."
    />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  :root {
    --accent-teal: #00817c;
    --accent-teal-light: #01a09b;
    --accent-teal-dark: #016562;
    --accent-blue: #256caa;
    --accent-blue-dark: #2065a1;
    --accent-gradient: linear-gradient(95deg, #67fef9, #2e85d1);
  }
  html {
    font-family: "Inter Variable", sans-serif;
    scroll-behavior: smooth;
  }
  body {
    margin: 0px;
    line-height: normal;
  }
  a {
    text-decoration: none;
    transition: background-color 0.2s ease;
  }
</style>

---
interface Props {
  title: string
  imgSrc: string
}
const { title, imgSrc } = Astro.props
---

<a id="articleServicio" href="/services">
  <div>
    <img alt="" src={imgSrc} />
  </div>
  <h3>{title}</h3>
  <p class="p4">
    <slot />
  </p>
</a>

<style>
  a {
    flex: 1;
    border-radius: 16px;
    background-color: white;
    box-shadow: 0 0 10px rgba(128, 128, 128, 0.1);
    overflow: hidden;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: flex-start;
    padding: 2rem;
    box-sizing: border-box;
    gap: 1rem;
    min-width: 16.25rem;
    cursor: pointer;
    text-align: left;
    font-size: 1.13rem;
    color: black;
  }
  a:hover {
    background-color: #e9e9e9;
  }
  div {
    border-radius: 60px;
    background-color: #f0f2f1;
    width: 3.75rem;
    height: 3.75rem;
    overflow: hidden;
    flex-shrink: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    color: green;
  }
  img {
    overflow: hidden;
    flex-shrink: 0;
    position: relative;
    width: 2rem;
    height: 2rem;
    object-fit: cover;
  }
  h3 {
    margin: 0;
    align-self: stretch;
    position: relative;
    line-height: 2rem;
    font-weight: 700;
  }
  p {
    margin: 0;
    align-self: stretch;
    position: relative;
    font-size: 1rem;
    line-height: 1.5rem;
    color: #2e2e2e;
  }
</style>

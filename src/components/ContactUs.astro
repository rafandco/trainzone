---
import Socials from "./Socials.astro"
import WorkButton from "./WorkButton.astro"
import PhoneButton from "./PhoneButton.astro"
import EmailButton from "./EmailButton.astro"
---

<section>
  <div class="div-container" data-scroll-to="divContainer" id="conocenos">
    <h2>Ubicación y contacto de TrainZone</h2>
    <div class="info-wrapper">
      <article class="article-info">
        <p>
          <span class="p-txt">
            <span class="span-text">TLF: 671597133</span>
            <span class="span-text">E-mail: centrotrainzone@gmail.com</span>
            <span class="span-text">Calle Fernando Escartín, Nº 12.</span>
            <span class="span-text">Bollullos Par Del Condado, HUELVA.</span>
          </span>
        </p>
        <div class="div-parent">
          <div class="div-button-wrapper">
            <PhoneButton />
            <EmailButton />
          </div>
          <WorkButton />
          <Socials />
        </div>
      </article>
      <iframe
        class="div-mapa"
        src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d12688.132882684664!2d-6.5328454!3d37.3417222!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0xd11f1088700e8fd%3A0x3a93db66def6f945!2sTRAINZONE!5e0!3m2!1ses!2ses!4v1694453591308!5m2!1ses!2ses"
      >
      </iframe>
    </div>
  </div>
</section>
<style>
  section {
    align-self: stretch;
    background-color: #3b3b3b;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
    padding: 0 1rem;
    text-align: left;
    color: white;
  }
  .div-container {
    overflow: hidden;
    display: flex;
    flex-direction: column;
    width: 100%;
    align-items: flex-start;
    justify-content: center;
    padding: 4rem 0;
    box-sizing: border-box;
    gap: 2rem;
    max-width: 71.25rem;
  }
  h2 {
    margin: 0;
    position: relative;
    line-height: 3rem;
    font-weight: 700;
    font-size: 1.5rem;
  }
  .info-wrapper {
    align-self: stretch;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    align-items: flex-start;
    justify-content: flex-start;
    gap: 2rem;
  }
  .article-info {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: flex-start;
    gap: 2rem;
    text-align: left;
    font-size: 1rem;
    color: #efefef;
  }
  p {
    display: flex;
    align-items: center;
    margin: 0;
    position: relative;
    line-height: 1.5rem;
    width: 22.38rem;
  }
  span {
    line-break: anywhere;
    width: 100%;
  }
  .span-text {
    display: block;
  }
  .div-parent {
    display: flex;
    flex-direction: column;
    align-items: stretch;
    justify-content: flex-start;
    align-self: stretch;
    gap: 1rem;
    text-align: center;
    font-size: 1.13rem;
    color: #fefefe;
  }
  .div-button-wrapper {
    align-self: stretch;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    align-items: stretch;
    justify-content: stretch;
    gap: 1rem;
  }
  iframe {
    border: 0;
    flex: 1;
    position: relative;
    border-radius: 1rem;
    height: 18.75rem;
    overflow: hidden;
    min-width: 15.63rem;
  }
  @media screen and (max-width: 805px) {
    .div-button-wrapper {
      align-self: stretch;
      display: flex;
      flex-direction: column;
      flex-wrap: wrap;
      align-items: stretch;
      justify-content: stretch;
      gap: 1rem;
    }
    .article-info {
      width: 100%;
    }
  }
  @media screen and (max-width: 520px) {
    .div-button-wrapper {
      align-self: stretch;
      display: flex;
      flex-direction: column;
      flex-wrap: wrap;
      align-items: stretch;
      justify-content: stretch;
      gap: 1rem;
    }
  }

  @media screen and (max-width: 420px) {
    .info-wrapper {
      flex-direction: row;
      gap: 1rem;
      align-items: flex-start;
      justify-content: flex-start;
    }

    .article-info {
      flex: 1;
    }
    p {
      align-self: stretch;
      width: auto;
    }
  }
</style>
